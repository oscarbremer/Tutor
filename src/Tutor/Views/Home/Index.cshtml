@model IEnumerable<Tutor.Models.Question>
@{
    ViewBag.Title = "Chat";
}
<h2>Question</h2>
<div class="container">
    @*<input type="text" id="message" />*@
    @*<input type="button" id="sendmessage" value="Send" />*@
    <input type="hidden" id="displayname" />
</div>

<div class="container">
    <div class="row">
        <form asp-controller="Tutor">
            <div class="form-group">
                <input type="text" class="form-control" placeholder="Location" id="location"/>
            </div>
            <div class="form-group">
                <textarea class="form-control" placeholder="Describe your problem" id="message"></textarea>
            </div>
            <input type="button" class="btn btn-default" id="sendmessage" value="Send" />
        </form>
    </div>
</div>
<div class="container questions">
    @foreach (var q in Model)
    {
        <div class="row">
            <div class="panel panel-default">
                <div class="panel-body">
                    <p class="col-xs-4">@q.Name</p>
                    <p class="col-xs-4">@q.Description</p>
                    <div class="pull-right"><button class="btn btn-danger right">Delete</button>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
@section scripts {
    <script id="question-template" type="text/x-handlebars-template">
       <div class="row">
           <div class="panel panel-default">
               <div class="panel-body">
                   <p class="col-xs-4">{{name}}</p>
                   <p class="col-xs-4">{{place}}</p>
                   <div class="pull-right"><button class="btn btn-danger right">Delete</button></div>
               </div>
           </div>
       </div>
</script>
    <script type="text/javascript">
        $(function() {
            var tutor = tutorModule.init();
        });
    </script>
