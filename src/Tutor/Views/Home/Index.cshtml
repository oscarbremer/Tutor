<h2>Question</h2>
<div class="container name-data">
    <div class="row">
        <div class="form-group">
            <input type="text" class="form-control" placeholder="Name" id="displayname" />
        </div>
        <button class="btn btn-default" id="saveName">Save</button>
    </div>
</div>

<div class="container question-data">
    <div class="row">
        <form>
            @*<div class="form-group">
                    <input type="text" class="form-control" placeholder="Name" id="displayname" />
                </div>*@
            <div class="form-group">
                <input type="text" class="form-control" placeholder="Location" id="location" />
            </div>
            <div class="form-group">
                <textarea class="form-control" placeholder="Describe your problem" id="message"></textarea>
            </div>
            <input class="btn btn-default" id="sendmessage" value="Send" />
        </form>
    </div>
</div>
<div class="container questions"></div>

@section scripts {
    <script id="question-template" type="text/x-handlebars-template">
        <div class="row question-item">
            <div class="panel {{PanelStyle}}">
                <div class="panel-heading">
                    <strong>{{Name}}</strong> - {{Location}}

                    <a class="delete pull-right" data-id="{{Id}}">
                        {{#if canDelete}}X{{/if}}
                    </a>
                  
                </div>
                <div class="panel-body">{{Description}}</div>
            </div>
        </div>
    </script>

    <script type="text/javascript">
        $(function () {
            var tutor = tutorModule.init();
            tutor.loadMessages();
        });
    </script>
}